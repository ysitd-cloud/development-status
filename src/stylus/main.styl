.navigation-drawer > .list .list__tile--active .list__tile__title
  color: rgba(0,0,0,0.87) !important

.navigation-drawer a.router-link-exact-active.list__tile--link > .list__tile__content > .list__tile__title, .navigation-drawer a.router-link-exact-active.list__tile--link > .list__tile__action > i.icon
  color: #44A148 !important
